@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Byt lösenord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<partial name="_StatusMessage" for="StatusMessage" />

<!-- 🔙 Back Button Row -->
<div class="col-md-6 mb-3 text-start">
    <a asp-page="/Account/Manage/SettingsList" class="btn btn-custom-RoseWineBase">
        <i class="fa fa-arrow-left me-1"></i> Back
    </a>
</div>

<div class="row justify-content-center">
    <h3 class="text-center form-title-Nav-Pages">@ViewData["Title"]</h3> <!-- Centered title -->
    <div class="col-md-6 form-container-Nav-Pages">
        <!-- Applied form container styling -->


        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vänligen ange ditt gamla lösenord." />

                <label asp-for="Input.OldPassword" class="form-label"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger-Nav-Pages"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vänligen ange ditt nya lösenord." />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger-Nav-Pages"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Vänligen upprepa ditt nya lösenord." />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger-Nav-Pages"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-custom-RoseWineBase">Uppdatera lösenord</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
