@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Hantera dina externa inloggningar";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" for="StatusMessage" />
<!-- 🔙 Back Button Row -->
<div class="col-md-6 mb-3 text-start">
    <a asp-page="/Account/Manage/SettingsList" class="btn btn-custom-RoseWineBase">
        <i class="fa fa-arrow-left me-1"></i> Back
    </a>
</div>

@if (Model.CurrentLogins?.Count > 0)
{
    <h3>Registrerade inloggningar</h3>
    <table class="table">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                <tr>
                    <td id="@($"login-provider-{login.LoginProvider}")">@login.ProviderDisplayName</td>
                    <td>
                        @if (Model.ShowRemoveButton)
                        {
                            <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post">
                                <div>
                                    <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                    <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                    <button type="submit" class="btn btn-primary" title="Ta bort den här @login.ProviderDisplayName-inloggningen från ditt konto">Ta bort</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            @: &nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (Model.OtherLogins?.Count > 0)
{
    <h4>Lägg till en annan tjänst för att logga in.</h4>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Logga in med ditt @provider.DisplayName-konto">@provider.DisplayName</button>
                }
            </p>
        </div>
    </form>
}
