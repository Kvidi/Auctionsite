@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Logga in";
}

<!doctype html>
<html lang="sv-se">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Fifty</title>
    <link rel="icon" type="image/png" href="~/Images/Website/ShadowedHeart50_nobg_hardest.png" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/signin.css" rel="stylesheet">

</head>
<body class="text-center">
    <form method="post" asp-route-returnUrl="@Model.ReturnUrl" asp-page-handler="Back">
        <button type="submit" class="btn btn-outline-dark top-left-button">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" width="24" height="24" viewBox="0 0 16 18">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"></path>
            </svg>
        </button>
    </form>
    <div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;"></div>
    <main class="form-signin" id="main-form">
        <form id="account" method="post">
            <img class="mb-4" src="~/Images/Website/ShadowedHeart50_nobg_hardest.png" alt="" width="65" height="60">
            <h1 class="h3 mb-3 fw-normal">Logga in</h1>
            <div asp-validation-summary="ModelOnly" class="login-text" id="warning-text" role="alert"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" type="email" class="form-control" autocomplete="username" aria-required="true" id="floatingEmail" />
                <label for="floatingEmail">Epostadress</label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" id="floatingPassword" />
                <label for="floatingPassword">Lösenord</label>
            </div>
            <div class="checkbox mb-3" id="remember-me">
                <label asp-for="Input.RememberMe">
                    <input class="form-check-input" id="remember-me-box" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <div class="d-flex gap-2 mb-3">
                <a href="#" class="btn btn-lg btn-outline-dark flex-fill" id="register-link">Registrera</a>
                <button type="submit" class="w-100 btn btn-lg btn-primary" id="login-submit">Logga in</button>
            </div>
            <div class="d-flex justify-content-end">
                <a asp-page="./ForgotPassword" class="login-text" id="forgot-password">Glömt lösenord?</a>
            </div>
        </form>
        @if (Model.ExternalLogins?.Count > 0)
        {
            <hr class="my-4">
            <div class="d-flex justify-content-center">
                <hr class="my-4">
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" class="btn btn-light p-0 border-0" name="provider" value="@provider.Name" title="Logga in med @provider.DisplayName konto" style="background: none;">
                                    <img src="~/Images/Google_Cloud_oAuth/web_light_sq_ctn.svg" alt="@provider.DisplayName" style="height:auto;width:auto;" />
                                </button>
                            }
                        </p>
                    </div>
                </form>
            </div>
        }
        <p class="mt-5 mb-3 text-muted">&copy; 2025</p>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
          showToast('@Model.ToastMessage', 'Varning', 7000, 'warning');
        });
    </script>
        <partial name="_ValidationScriptsPartial" />
</body>
</html>
