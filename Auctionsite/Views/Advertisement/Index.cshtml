@using Auctionsite
@using Auctionsite.Models
@using Auctionsite.Models.Database
@using Auctionsite.Models.VM
@model PagedResult<AdCardVM>
@{
    var pageTitle = ViewBag.CategoryBreadcrumbs != null && Enumerable.Any(ViewBag.CategoryBreadcrumbs)
        ? Enumerable.Last(ViewBag.CategoryBreadcrumbs).Name
        : "Alla annonser";
    ViewData["Title"] = pageTitle;

    // Explicitly cast ViewBag.SearchFilter to AdSearchFilterViewModel
    var searchFilter = ViewBag.SearchFilter as AdSearchFilterViewModel;
}

<div class="container my-4">

    @if (ViewBag.CategoryBreadcrumbs != null && Enumerable.Any(ViewBag.CategoryBreadcrumbs))
    {
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Hem</a></li>
                <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Kategorier</a></li>
                @foreach (var crumb in (List<CategoryForAdvertisement>)ViewBag.CategoryBreadcrumbs)
                {
                    if (crumb != Enumerable.Last(ViewBag.CategoryBreadcrumbs))
                    {
                        <li class="breadcrumb-item"><a asp-controller="Advertisement" asp-action="Index" asp-route-categoryId="@crumb.Id">@crumb.Name</a></li>
                    }
                    else
                    {
                        <li class="breadcrumb-item active" aria-current="page">@crumb.Name</li>
                    }
                }
            </ol>
        </nav>
    }

    <div class="row">
        <div class="col-12 mb-4">
            <h2 class="d-inline-block me-3">@pageTitle</h2>
            <span class="text-muted">@Model.TotalItems annonser</span>

            <hr />

            <!-- Persistent Filter Display Component -->
            <div id="active-filters-container" class="mb-3" style="display: none;">
                <div class="d-flex flex-wrap align-items-center gap-2">
                    <span class="text-muted small">Aktiva filter:</span>
                    <div id="active-filters-list" class="d-flex flex-wrap gap-2">
                        <!-- Active filter tags will be dynamically inserted here -->
                    </div>
                    <button type="button" id="clear-all-filters" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Rensa alla
                    </button>
                </div>
            </div>

            <!-- Quick Filter Bar -->
            <form asp-action="Search" asp-controller="Advertisement" method="get" id="filter-form">
                @* Preserve current search term and search type *@
                @if (!string.IsNullOrEmpty(searchFilter?.SearchTerm))
                {
                    <input type="hidden" name="SearchTerm" value="@(searchFilter?.SearchTerm)" />
                }
                @if (searchFilter?.SearchType != null)
                {
                    <input type="hidden" name="SearchType" value="@(searchFilter?.SearchType.ToString())" />
                }

                @* Preserve current category if coming from category page *@
                @if (ViewBag.CategoryId != null)
                {
                    <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
                }

                <div class="d-flex flex-wrap align-items-center mb-3" style="gap: 0.5rem;">
                    <!-- All Filters Button - Opens Modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#allFiltersModal">
                        <i class="bi bi-sliders"></i> Alla filter
                    </button>

                    <!-- Quick Category Filter -->
                    <div class="dropdown">
                        <button class="btn btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Kategori
                        </button>
                        <ul class="dropdown-menu" style="max-height: 400px; overflow-y: auto;">
                            <li>
                                <div class="dropdown-item">
                                    <div class="form-check">
                                        @{
                                            var currentCategoryId = searchFilter?.CategoryId;
                                        }
                                        <input class="form-check-input category-filter" type="radio" name="categoryId" value="" id="filter_cat_all" @(currentCategoryId == null ? "checked" : "")>
                                        <label class="form-check-label" for="filter_cat_all">
                                            <strong>Alla kategorier</strong>
                                        </label>
                                    </div>
                                </div>
                            </li>

                            @if (ViewBag.GroupedCategories != null)
                            {
                                @foreach (var group in (List<CategoryGroupVM>)ViewBag.GroupedCategories)
                                {
                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <div class="dropdown-item">
                                            <div class="form-check">
                                                <input class="form-check-input category-filter" type="radio" name="categoryId" value="@group.GroupId" id="filter_cat_parent_@group.GroupId" @(currentCategoryId == group.GroupId ? "checked" : "")>
                                                <label class="form-check-label" for="filter_cat_parent_@group.GroupId">
                                                    <strong>@group.GroupName</strong>
                                                </label>
                                            </div>
                                        </div>
                                    </li>

                                    @foreach (var item in group.SubCategories)
                                    {
                                        <li>
                                            <div class="dropdown-item">
                                                <div class="form-check ms-3">
                                                    <input class="form-check-input category-filter" type="radio" name="categoryId" value="@item.Value" id="filter_cat_@item.Value" @(currentCategoryId?.ToString() == item.Value ? "checked" : "")>
                                                    <label class="form-check-label" for="filter_cat_@item.Value">@item.Text</label>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                }
                            }
                        </ul>
                    </div>

                    <!-- Quick Price Filter -->
                    <div class="dropdown">
                        <button class="btn btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                            Pris
                        </button>
                        <div class="dropdown-menu p-3" style="width: 250px;">
                            <label class="form-label">Prisintervall</label>
                            <div class="d-flex align-items-center">
                                <input type="number"
                                       name="minPrice"
                                       class="form-control"
                                       placeholder="Min"
                                       value="@(searchFilter?.MinPrice)">
                                <span class="mx-2">-</span>
                                <input type="number"
                                       name="maxPrice"
                                       class="form-control"
                                       placeholder="Max"
                                       value="@(searchFilter?.MaxPrice)">
                            </div>
                        </div>
                    </div>

                    <!-- Quick Ad Type Filter -->
                    <div class="dropdown">
                        <button class="btn btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Annonsformat
                        </button>
                        <ul class="dropdown-menu">
                            @{
                                var currentAdType = searchFilter?.AdType?.ToString();
                            }
                            @foreach (var item in (List<SelectListItem>)ViewBag.AdTypeOptions)
                            {
                                <li>
                                    <div class="dropdown-item">
                                        <div class="form-check">
                                            <input class="form-check-input"
                                                   type="radio"
                                                   name="adType"
                                                   value="@item.Value"
                                                   id="adType_@item.Value"
                                            @(currentAdType == item.Value ? "checked" : "")>
                                            <label class="form-check-label" for="adType_@item.Value">@item.Text</label>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Quick Condition Filter -->
                    <div class="dropdown">
                        <button class="btn btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
                            Skick
                        </button>
                        <ul class="dropdown-menu">
                            @{
                                var selectedConditions = searchFilter?.SelectedConditions?.Select(c => c.ToString()).ToList();
                            }
                            @foreach (var item in (List<SelectListItem>)ViewBag.ConditionOptions)
                            {
                                <li>
                                    <div class="dropdown-item">
                                        <div class="form-check">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="selectedConditions"
                                                   value="@item.Value"
                                                   id="cond_@item.Value"
                                            @(selectedConditions != null && selectedConditions.Contains(item.Value) ? "checked" : "")>
                                            <label class="form-check-label" for="cond_@item.Value">@item.Text</label>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Quick Seller Type Filter -->
                    <div class="dropdown">
                        <button class="btn btn-light border dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Säljare
                        </button>
                        <ul class="dropdown-menu">
                            @{
                                var currentSellerType = searchFilter?.SellerType.ToString();
                            }
                            <li>
                                <div class="dropdown-item">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="radio"
                                               name="sellerType"
                                               value="@SellerType.PrivateOnly"
                                               id="seller_private"
                                        @(currentSellerType == SellerType.PrivateOnly.ToString() ? "checked" : "")>
                                        <label class="form-check-label" for="seller_private">Privat</label>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="dropdown-item">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="radio"
                                               name="sellerType"
                                               value="@SellerType.CompanyOnly"
                                               id="seller_company"
                                        @(currentSellerType == SellerType.CompanyOnly.ToString() ? "checked" : "")>
                                        <label class="form-check-label" for="seller_company">Företag</label>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <!-- Apply Filters Button -->
                    <button type="submit" class="btn btn-dark">Tillämpa filter</button>
                </div>
            </form>
        </div>

        <div class="col-12">
            @if (Model.Items.Any())
            {
                <div class="row row-cols-5">
                    @foreach (var ad in Model.Items)
                    {
                        @await Html.PartialAsync("_AdCardPartial", ad)
                    }
                </div>

                <nav aria-label="Page navigation" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-route="AdIndex" asp-route-page="@(Model.PageNumber - 1)" asp-route-categoryId="@(ViewBag.CategoryId ?? (int?)null)">Föregående</a>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">@Model.PageNumber</span>
                        </li>
                        <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-route="AdIndex" asp-route-page="@(Model.PageNumber + 1)" asp-route-categoryId="@(ViewBag.CategoryId ?? (int?)null)">Nästa</a>
                        </li>
                    </ul>
                    <div class="text-center text-muted small mt-2">
                        Sida @Model.PageNumber av @Model.TotalPages
                    </div>
                </nav>
            }
            else
            {
                <div class="text-center py-5 border rounded mt-4">
                    <h4><i class="bi bi-search fs-1"></i></h4>
                    <h4>Inga annonser hittades</h4>
                    <p class="text-muted">Det finns för närvarande inga annonser som matchar din sökning.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-dark mt-3">Tillbaka till startsidan</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Include the All Filters Modal -->
@await Html.PartialAsync("_AllFiltersModalPartial")

<!-- CSS for filter tags -->
<style>
    .filter-tag {
        display: inline-flex;
        align-items: center;
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        border-radius: 20px;
        padding: 4px 12px;
        font-size: 0.875rem;
        color: #495057;
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .filter-tag:hover {
            background-color: #dee2e6;
            border-color: #adb5bd;
            color: #495057;
            text-decoration: none;
        }

        .filter-tag .remove-filter {
            margin-left: 8px;
            background: none;
            border: none;
            color: #6c757d;
            font-size: 1rem;
            line-height: 1;
            cursor: pointer;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            transition: all 0.2s ease;
        }

            .filter-tag .remove-filter:hover {
                background-color: #dc3545;
                color: white;
            }

        .filter-tag.search-term {
            background-color: #d1ecf1;
            border-color: #bee5eb;
            color: #0c5460;
        }

        .filter-tag.category {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .filter-tag.price {
            background-color: #fff3cd;
            border-color: #ffeaa7;
            color: #856404;
        }

        .filter-tag.condition {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

        .filter-tag.ad-type {
            background-color: #e2e3e5;
            border-color: #d6d8db;
            color: #383d41;
        }

        .filter-tag.seller-type {
            background-color: #d6f5d6;
            border-color: #c3e6cb;
            color: #155724;
        }

    /* Modal specific styles */
    .modal-body h6 {
        color: #495057;
        font-weight: 600;
        margin-bottom: 0.75rem;
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.25rem;
    }

    .modal-body .form-check {
        margin-bottom: 0.5rem;
    }

    .modal-body .form-check-label {
        font-size: 0.9rem;
    }

    .modal-body .form-control {
        font-size: 0.9rem;
    }

    /* Scrollable category section in modal */
    .modal-body .col-md-6:first-child {
        max-height: 400px;
        overflow-y: auto;
    }
</style>

