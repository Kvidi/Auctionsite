@using Auctionsite
@using Auctionsite.Models
@using Auctionsite.Models.VM
@model IEnumerable<PendingAdsListVM>

@foreach (var ad in Model)
{
    var days = (DateTime.Now - ad.AddedAt).Days;
    <div class="list-group-item list-group-item-action cursor-pointer py-3 mb-2 rounded shadow-sm d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center preview-ad-btn" data-ad-id="@ad.Id">

        <!-- Title and User -->
        <div class="approve-title-cont me-3">
            <h5 class="mb-1">@ad.Title</h5>
            <small class="text-muted d-block text-truncate">Av @ad.UserName</small>
        </div>

        <!-- Badges -->
        <div class="approve-badge-cont d-flex flex-wrap justify-content-end align-items-sm-center gap-2 mt-2 mt-sm-0">
            @if (!ad.IsSeenByAdmin)
            {
                <span class="badge bg-success">Ny</span>
            }
            <span class="badge bg-secondary">
                @if (days == 0)
                {
                    @:Idag
                }
                else
                {
                    @: @days dag@(days == 1 ? "" : "ar") sedan
                }
            </span>
        </div>
    </div>
}